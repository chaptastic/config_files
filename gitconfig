[core]
	editor = vim +0 -f
	whitespace = -trailing-space
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
[core]
	excludesfile = ~/.gitignore
[alias]
	ci = commit -v
	st = status
	co = checkout
	sre = svn rebase
	sdc = svn dcommit --rmdir
	ms = merge --squash
[merge]
	tool = opendiff
[diff "ruby"]
	funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)
